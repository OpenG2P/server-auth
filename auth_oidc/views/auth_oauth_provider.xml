<?xml version="1.0" ?>
<odoo>
    <record model="ir.ui.view" id="view_oidc_provider_form">
        <field name="name">auth.oidc.provider.form</field>
        <field name="model">auth.oauth.provider</field>
        <field name="inherit_id" ref="auth_oauth.view_oauth_provider_form" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="redirect_url" />
            </field>
            <field name="name" position="after">
                <field name="flow" />
                <field
                    name="token_map"
                    placeholder="e.g from:to upn:email sub:user_id"
                />
            </field>
            <field name="client_id" position="after">
                <field name="client_authentication_method" />
                <field name="client_secret" attrs="{'invisible': [('client_authentication_method','!=','client_secret')]}"  />
                <field name="client_private_key" attrs="{'invisible': [('client_authentication_method','!=','private_key_jwt')]}" />
                <field name="grant_type" attrs="{'invisible': [('client_authentication_method','!=','private_key_jwt')]}" />
            </field>
           
            <field name="validation_endpoint" position="after">
                <field name="token_endpoint" />
                <field name="jwks_uri" />
            </field>
        </field>
    </record>
</odoo>
